      }
    },
    {
      "name": "linux-gcc-base",
      "inherits": "linux-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "/opt/Qt/6.9.1/gcc_64"
      },
      "environment": {
        "CC": "gcc-11",
        "CXX": "g++-11"
      }
    },
    {
      "name": "windows-msvc2022-x64-debug",
      "inherits": "windows-msvc2022-x64-base",

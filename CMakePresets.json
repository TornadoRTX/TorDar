      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "windows-msvc2022-x64-base",
      "inherits": "windows-x64-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "C:/Qt/6.9.1/msvc2022_64"
